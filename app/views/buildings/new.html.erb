<h1>Add a new building:</h1>

<%= notice %>

<%= form_for @building do |f| %>
  <% if @building.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@building.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @building.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :street_address, 'Street Address' %>
  <%= f.text_field :street_address %><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br>

  <%= f.label :state %>
  <%= f.select :state, options_for_select(us_states) %><br>

  <%= f.label :zip, 'ZIP' %>
  <%= f.text_field :zip %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.label :owner_id %>
  <%= f.collection_select(:owner_id, Owner.all, :id, :last_name, {include_blank: true} ) %><br>

  <%= f.submit %>
<% end %>
